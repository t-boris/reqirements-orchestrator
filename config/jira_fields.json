{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "Jira field mappings per issue type",
  "issue_types": {
    "Epic": {
      "required_fields": ["summary", "description"],
      "optional_fields": ["priority", "labels", "components"],
      "field_mappings": {
        "summary": "title",
        "description": "description",
        "priority": "priority",
        "labels": "tags"
      }
    },
    "Story": {
      "required_fields": ["summary", "description"],
      "optional_fields": ["priority", "labels", "components", "story_points", "acceptance_criteria"],
      "field_mappings": {
        "summary": "title",
        "description": "description",
        "priority": "priority",
        "labels": "tags",
        "customfield_10016": "story_points",
        "customfield_10017": "acceptance_criteria"
      }
    },
    "Task": {
      "required_fields": ["summary"],
      "optional_fields": ["description", "priority", "labels", "assignee"],
      "field_mappings": {
        "summary": "title",
        "description": "description",
        "priority": "priority",
        "labels": "tags"
      }
    },
    "Sub-task": {
      "required_fields": ["summary", "parent"],
      "optional_fields": ["description", "priority", "assignee"],
      "field_mappings": {
        "summary": "title",
        "description": "description",
        "priority": "priority"
      }
    },
    "Bug": {
      "required_fields": ["summary", "description"],
      "optional_fields": ["priority", "labels", "components", "severity", "steps_to_reproduce"],
      "field_mappings": {
        "summary": "title",
        "description": "description",
        "priority": "priority",
        "labels": "tags"
      }
    }
  },
  "priority_mapping": {
    "critical": "Highest",
    "high": "High",
    "medium": "Medium",
    "low": "Low"
  },
  "status_mapping": {
    "DRAFT": "To Do",
    "IN_REVIEW": "In Progress",
    "APPROVED": "Ready",
    "SYNCED": "Done"
  }
}
