# =============================================================================
# MARO Configuration - Copy to .env and fill in values
# =============================================================================

# -----------------------------------------------------------------------------
# LLM Configuration (Required: at least one provider)
# -----------------------------------------------------------------------------
# Gemini (recommended for production - lower cost)
GOOGLE_API_KEY=your-google-api-key

# OpenAI (optional)
OPENAI_API_KEY=your-openai-api-key

# Anthropic (optional)
ANTHROPIC_API_KEY=your-anthropic-api-key

# Default model (gemini-3-flash-preview, gpt-4o-mini, claude-3-haiku-20240307)
DEFAULT_LLM_MODEL=gemini-3-flash-preview

# -----------------------------------------------------------------------------
# Slack Configuration (Required)
# -----------------------------------------------------------------------------
# Bot token (xoxb-...)
SLACK_BOT_TOKEN=xoxb-your-bot-token

# App-level token for Socket Mode (xapp-...)
SLACK_APP_TOKEN=xapp-your-app-token

# Signing secret from Slack app settings
SLACK_SIGNING_SECRET=your-signing-secret

# -----------------------------------------------------------------------------
# Jira Configuration (Required for ticket creation)
# -----------------------------------------------------------------------------
# Jira instance URL
JIRA_URL=https://your-domain.atlassian.net

# User email for API authentication
JIRA_USER=your-email@example.com

# API token from Atlassian account settings
JIRA_API_TOKEN=your-jira-api-token

# Default project key (optional)
JIRA_DEFAULT_PROJECT=PROJ

# Environment identifier (dev|staging|prod)
JIRA_ENV=dev

# Dry run mode - log instead of calling Jira API (true|false)
JIRA_DRY_RUN=false

# Request timeout in seconds
JIRA_TIMEOUT=30

# Max retry attempts for transient failures
JIRA_MAX_RETRIES=3

# -----------------------------------------------------------------------------
# Database Configuration (Required)
# -----------------------------------------------------------------------------
# PostgreSQL connection string
# Docker internal: postgresql://maro:maro_secure@postgres:5432/maro
# Local dev: postgresql://localhost:5432/maro
DATABASE_URL=postgresql://localhost:5432/maro

# For docker-compose - postgres password
POSTGRES_PASSWORD=maro_secure

# -----------------------------------------------------------------------------
# LangSmith Tracing (Recommended for production debugging)
# -----------------------------------------------------------------------------
LANGCHAIN_TRACING_V2=true
LANGCHAIN_API_KEY=your-langsmith-api-key
LANGCHAIN_PROJECT=maro-production

# -----------------------------------------------------------------------------
# Zep Memory (Optional - semantic search for conversations)
# -----------------------------------------------------------------------------
# Zep API URL (local dev: http://localhost:8000)
ZEP_API_URL=http://localhost:8000

# Zep API key (optional for local dev)
# ZEP_API_KEY=your-zep-api-key

# -----------------------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------------------
# Environment (development|staging|production)
ENVIRONMENT=development

# Debug mode (true|false)
DEBUG=false

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# -----------------------------------------------------------------------------
# Channel Context Settings (Phase 8)
# -----------------------------------------------------------------------------
# How often to refresh activity snapshot (hours)
CHANNEL_CONTEXT_ACTIVITY_REFRESH_HOURS=6

# TTL for derived signals (days)
CHANNEL_CONTEXT_DERIVED_TTL_DAYS=14

# How far back to index root messages (days)
CHANNEL_CONTEXT_ROOT_WINDOW_DAYS=60

# Max bullets in compact context
CHANNEL_CONTEXT_MAX_BULLETS=15
