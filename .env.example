# =============================================================================
# MARO v2 Environment Configuration
# =============================================================================

# -----------------------------------------------------------------------------
# LLM Providers
# -----------------------------------------------------------------------------
OPENAI_API_KEY=sk-...
ANTHROPIC_API_KEY=sk-ant-...
GOOGLE_API_KEY=AI...

# Default model for main bot
DEFAULT_LLM_MODEL=gpt-4o

# -----------------------------------------------------------------------------
# Slack Configuration
# -----------------------------------------------------------------------------
SLACK_BOT_TOKEN=xoxb-...
SLACK_APP_TOKEN=xapp-...
SLACK_SIGNING_SECRET=...

# -----------------------------------------------------------------------------
# Jira Configuration (for MCP server)
# -----------------------------------------------------------------------------
JIRA_URL=https://your-domain.atlassian.net
JIRA_USER=your-email@example.com
JIRA_API_TOKEN=...

# -----------------------------------------------------------------------------
# Zep Memory
# -----------------------------------------------------------------------------
ZEP_API_URL=http://zep:8000

# -----------------------------------------------------------------------------
# Database (PostgreSQL)
# -----------------------------------------------------------------------------
DATABASE_URL=postgresql+asyncpg://maro:maro@postgres:5432/maro

# -----------------------------------------------------------------------------
# LangSmith Observability
# -----------------------------------------------------------------------------
LANGCHAIN_TRACING_V2=true
LANGCHAIN_API_KEY=ls-...
LANGCHAIN_PROJECT=maro-v2
LANGCHAIN_ENDPOINT=https://api.smith.langchain.com

# -----------------------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------------------
# Confidence thresholds for bot response
CONFIDENCE_THRESHOLD_MAIN=0.6
CONFIDENCE_THRESHOLD_PERSONA=0.95

# Maximum reflexion iterations (draft -> critique cycle)
MAX_REFLEXION_ITERATIONS=3

# Server
HOST=0.0.0.0
PORT=8000
DEBUG=false
