# =============================================================================
# MARO v2 - Production Environment Template
# =============================================================================
# Copy this file to .env.production and fill in your values.
# NEVER commit .env.production to version control!
# =============================================================================

# Environment
ENVIRONMENT=production

# =============================================================================
# LLM Providers
# =============================================================================
OPENAI_API_KEY=sk-...
ANTHROPIC_API_KEY=sk-ant-...
GOOGLE_API_KEY=AIza...
DEFAULT_LLM_MODEL=gpt-4o

# =============================================================================
# Slack
# =============================================================================
SLACK_BOT_TOKEN=xoxb-...
SLACK_APP_TOKEN=xapp-...
SLACK_SIGNING_SECRET=...

# =============================================================================
# Jira
# =============================================================================
JIRA_URL=https://your-company.atlassian.net
JIRA_USER=your-email@company.com
JIRA_API_TOKEN=...

# =============================================================================
# Database (set in docker-compose, included for reference)
# =============================================================================
POSTGRES_PASSWORD=change-this-password
# DATABASE_URL is set automatically in docker-compose.prod.yml

# =============================================================================
# LangSmith Observability
# =============================================================================
LANGCHAIN_TRACING_V2=true
LANGCHAIN_API_KEY=ls__...
LANGCHAIN_PROJECT=maro-v2-production
LANGCHAIN_ENDPOINT=https://api.smith.langchain.com

# =============================================================================
# Application Settings
# =============================================================================
CONFIDENCE_THRESHOLD_MAIN=0.6
CONFIDENCE_THRESHOLD_PERSONA=0.95
MAX_REFLEXION_ITERATIONS=3
